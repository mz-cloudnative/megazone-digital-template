<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.megazone.springbootbackend.sample.repository.mapper.SampleXmlMapper">
    <resultMap id="usersMap"
               type="com.megazone.springbootbackend.communityAPI.model.entity.Users">
        <result property="userId" column="id"/>
        <result property="username" column="name"/>
    </resultMap>
    <select id="findByuserName" parameterType="String" resultMap="usersMap">
        select * from Users
        where name like '%'||#{name}||'%'
    </select>
</mapper>